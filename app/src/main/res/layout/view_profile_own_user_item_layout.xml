<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:paddingLeft="40sp"
    android:paddingRight="40sp"
    android:paddingBottom="24sp"
    tools:context=".view_profile_own_user_item_layout">

    <TextView
        android:id="@+id/fullPostDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/itim"
        android:text="October 15, 2023" />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/itim"
        android:text="Planet Jupiter, Outer Space"
        android:textColor="#737373" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/itim"
        android:text="Today is sunny. I went for a walk around Jupiter. The view of Jupiter was amazing." />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/postImageView"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rounded_corner_image"
        app:shapeAppearanceOverlay="@style/rounddpsmall"/>

</LinearLayout>